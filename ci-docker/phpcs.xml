<?xml version="1.0"?>
<ruleset name="MyProject">
    <rule ref="PSR12">
        <!-- Excluir la regla que requiere una línea en blanco después del bloque de encabezado -->
        <exclude name="PSR12.Files.FileHeader.SpacingAfterBlock"/>
        <exclude name="Generic.Files.GlobalNamespace.Declaration"/>
        <exclude name="PSR12.Namespaces.CompoundNamespaceDepth"/>
        <exclude name="PSR1.Files.SideEffects.FoundWithSymbols"/>
        <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>

    </rule>
    <!--
        <rule ref="Squiz">
            <exclude name="Squiz.WhiteSpace.FunctionSpacing.After"/>
            <exclude name="Squiz.WhiteSpace.FunctionSpacing.Before"/>
            <exclude name="Squiz.WhiteSpace.ControlStructureSpacing.SpacingAfterOpen"/>
            <exclude name="Squiz.WhiteSpace.ControlStructureSpacing.SpacingBeforeClose"/>
            <exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseBrace"/>
            <exclude name="Squiz.Sniffs.Commenting.FileCommentSniff"/>
            <exclude name="Squiz.Arrays.ArrayDeclaration.MultipleValues"/>
            <exclude name=""/>
            <exclude name=""/>
            <exclude name=""/>
        </rule>
    -->
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="6"/>
    <arg name="colors"/>

    <exclude-pattern>tests/*</exclude-pattern>
    <exclude-pattern>ci-docker/*</exclude-pattern>
    <exclude-pattern>scripts/*</exclude-pattern>
    <exclude-pattern>dbext/*</exclude-pattern>
    <exclude-pattern>vendor/*</exclude-pattern>
</ruleset>
